#!/bin/sh
#
# Init Bluetooth hardware....
#

case "$1" in
  start)
        echo "Starting bluetooth..."
        echo > /dev/ttySAC1 #Hack for false starts.
        brcm_patchram_plus -d --patchram /lib/firmware/ap6210/bcm20702a.hcd --bd_addr aa:22:33:44:55:66 --no2bytes --tosleep 5000 /dev/ttySAC1 >/dev/null 2>&1 
        hciattach /dev/ttySAC1 any
        hciconfig hci0 up
        ;;
  stop)
        echo -n "Stopping bluetooth..."
        hciconfig hci0 down
        ;;
  restart|reload)
        "$0" stop
        "$0" start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
